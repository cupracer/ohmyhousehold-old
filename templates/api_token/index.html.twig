{% extends 'theme/base-datatables.html.twig' %}

{% block page_body %}
    {% block page_header_buttons %}
        <div class="card shadow mt-4 mb-4">
            <!-- Page header buttons -->
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <a href="{{ path('api_token_new') }}" class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50 mr-1">
                  <i class="fas fa-plus-circle"></i>
                </span>
                            <span class="text">Create New...</span>
                        </a>
                    </div>
                    <div class="col-md-4 text-center"></div>
                    <div class="col-md-4 text-right"></div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block page_content %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col"></div>
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-body">
                                    <table id="apiTokens" class="table table-hover dataTable">
                                        <thead>
                                        <tr>
                                            <th>Description</th>
                                            <th>CreatedAt</th>
                                            <th>ExpiresAt</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for api_token in api_tokens %}
                                            <tr>
                                                <td>{{ api_token.description }}</td>
                                                <td>{{ api_token.createdAt ? api_token.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                                <td>{{ api_token.expiresAt ? api_token.expiresAt|date('Y-m-d H:i:s') : 'never' }}</td>
                                                <td class="text-right">
                                                    <div class="btn-group">
                                                        <form method="post" action="{{ path('api_token_delete', {'id': api_token.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ api_token.id) }}">
                                                            <button class="btn btn-danger btn-xs btn-delete"><i class="fas fa-trash-alt"></i></button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="5">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <div class="col"></div>
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    {% endblock %}
{% endblock %}

{% block javascripts  %}
    {{ parent() }}

    {{ encore_entry_script_tags('app_api_token_list') }}
{% endblock javascripts %}