{% extends 'theme/base-datatables.html.twig' %}

{% block page_header_buttons %}
    <a href="{{ path('app_user_apitoken_new') }}" class="btn btn-primary btn-sm btn-icon-split ml-3">
        <span class="icon text-white-50 mr-1">
          <i class="fas fa-plus-circle"></i>
        </span>
        <span class="text">{{ 'Generate API token...'|trans }}</span>
    </a>
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-4">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">{{ 'My profile settings'|trans }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(userProfileForm) }}
                        <div class="form-group">
                            {{ form_label(userProfileForm.forenames) }}
                            {{ form_errors(userProfileForm.forenames) }}
                            {{ form_widget(userProfileForm.forenames) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(userProfileForm.surname) }}
                            {{ form_errors(userProfileForm.surname) }}
                            {{ form_widget(userProfileForm.surname) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(userProfileForm.locale) }}
                            {{ form_errors(userProfileForm.locale) }}
                            {{ form_widget(userProfileForm.locale) }}
                        </div>
                        <div class="row">
                            <div class="col-12 text-right">
                                <button type="submit" class="btn btn-primary btn-icon-split ml-3">
                                    <span class="icon text-white-50 mr-1">
                                        <i class="far fa-save"></i>
                                    </span>
                                    <span class="text">{{ button_label|default('Update')|trans }}</span>
                                </button>
                            </div>
                            <!-- /.col -->
                        </div>
                    {{ form_end(userProfileForm) }}
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            {{ render(controller(
                'App\\Controller\\ApiTokenController::indexSnippet'
            )) }}
        </div>
    </div>
    <!-- /.row -->
{% endblock %}


{% block javascripts  %}
    {{ parent() }}

    {{ encore_entry_script_tags('app_user_apitoken_index') }}
{% endblock javascripts %}