<div id="toasts"></div>

{% if error is defined and error %}
    <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% if label == "info" %}
            <div class="alert alert-info alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-info"></i> {{ 'app.information'|trans|u.title }}</h5>
                {{ message|trans }}
            </div>
        {% elseif label == "success" %}
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-check"></i> {{ 'app.success'|trans|u.title }}</h5>
                {{ message|trans }}
            </div>
        {% elseif label == "warning" %}
            <div class="alert alert-warning alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-exclamation-triangle"></i> {{ 'app.warning'|trans|u.title }}</h5>
                {{ message|trans }}
            </div>
        {% elseif label == "error" %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> {{ 'app.error'|trans|u.title }}</h5>
                {{ message|trans }}
            </div>
        {% endif %}
    {% endfor %}
{% endfor %}