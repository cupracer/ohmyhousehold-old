{% block navbar_left_items %}
    <li class="nav-item d-none d-sm-inline-block">
        <a href="{{ path('homepage') }}" class="nav-link">Home</a>
    </li>
{% endblock navbar_left_items %}


{% block navbar_search %}
{% endblock navbar_search %}


{% block masquerade %}
    {% if is_granted('IS_IMPERSONATOR') %}
        <div class="red text-red">
            <i class="fas fa-exclamation-triangle"></i>
            {{ 'You are currently masqueraded as user'|trans }} "{{ app.user.username }}".
            <a class="btn btn-outline-danger btn-sm" style="color: red;" href="{{ path('homepage', {'_switch_user': '_exit'}) }}">{{ 'End'|trans }}</a>
        </div>
    {% endif %}
{% endblock masquerade %}


{% block navbar_notifications_dropdown %}
{% endblock navbar_notifications_dropdown %}


{% block navbar_control_fullscreen_button %}
{% endblock navbar_control_fullscreen_button %}


{% block navbar_messages_dropdown %}
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {{ app.request.locale|locale_name(app.request.locale)|u.title }}
            </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
                <a class="dropdown-item" href="{{ path('homepage', {_locale: 'en'}) }}">English</a>
                <a class="dropdown-item" href="{{ path('homepage', {_locale: 'de'}) }}">Deutsch</a>
            </div>
    </li>
{% endblock navbar_messages_dropdown %}


{% block navbar_control_sidebar_button %}
{% endblock navbar_control_sidebar_button %}


{% block login_logout_button %}
    {% if is_granted('ROLE_USER') %}
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="text-success far fa-user fa-2x"></i> {{ app.user.userProfile.naturalName }}
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <a href="#" class="dropdown-item">
                    <!-- Message Start -->
                    <div class="media">
                        <div class="media-body">
{#                            <h3 class="dropdown-item-title">#}
{#                                <span class="text-sm">User settings</span>#}
{#                            </h3>#}
                        </div>
                    </div>
                    <!-- Message End -->
                </a>
{#                <div class="dropdown-divider"></div>#}
                <div class="dropdown-footer">
                    <a  href="{{ path('app_user_profile') }}" class="btn btn-primary btn-sm mr-3">{{ 'My profile'|trans }}</a>
                    <a  href="{{ path('app_user_logout') }}" class="btn btn-danger btn-sm ml-3">{{ 'Sign out'|trans }}</a>
                </div>

            </div>
        </li>

    {% else %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_user_register') }}">
                <i class="fas fa-user-plus mr-1"></i> {{ 'Register'|trans }}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_user_login') }}">
                <i class="fas fa-sign-in-alt mr-1"></i> {{ 'Sign in'|trans }}
            </a>
        </li>
    {% endif %}
{% endblock login_logout_button %}


