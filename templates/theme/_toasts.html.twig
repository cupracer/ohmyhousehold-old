<script type="text/javascript">
    {% for label, messages in app.flashes %}
    {% for message in messages %}
    $(document).Toasts('create', {
        title: '{{ label }}',
        class: 'bg-{{ label }}',
        body: '{{ message }}',
        autohide: true,
        delay: 4000,
        close: true,
        icon: 'fas fa-exclamation-triangle',
        position: 'topRight',
    });
    {% endfor %}
    {% endfor %}
</script>