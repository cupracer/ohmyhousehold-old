{% extends 'theme/base.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col"></div>
        <div class="col-lg-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">{{ 'Details'|trans }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                {{ form_label(form.bookingDate) }}
                                <div class='input-group date' id='datetimepicker1'>
                                    {{ form_widget(form.bookingDate) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="form-group">
                                {{ form_label(form.bookingCategory) }}
                                {{ form_widget(form.bookingCategory) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="form-group">
                                {{ form_label(form.accountHolder) }}
                                {{ form_widget(form.accountHolder) }}
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                {{ form_label(form.amount) }}
                                {{ form_widget(form.amount) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col"></div>
                        <!-- /.col -->

                        <div class="col-12 text-right">
                            <div class="form-group mb-lg-5">
                                {{ form_label(form.private) }}
                                {{ form_widget(form.private) }}
                            </div>
                            <a href="{{ path('housekeepingbook_booking_index') }}" class="btn btn-outline-warning btn-icon-split">
                                        <span class="icon text-warning mr-1">
                                            <i class="fas fa-arrow-alt-circle-left"></i>
                                        </span>
                                <span class="text">{{ 'Cancel'|trans }}</span>
                            </a>
                            <button type="submit" class="btn btn-primary btn-icon-split ml-3">
                                        <span class="icon text-white-50 mr-1">
                                            <i class="far fa-save"></i>
                                        </span>
                                <span class="text">{{ button_label|default('button.add')|trans|u.title }}</span>
                            </button>
                        </div>
                        <!-- /.col -->
                    </div>
                    {{ form_end(form) }}
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col"></div>
    </div>
    <!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('housekeepingbook_booking_form') }}
{% endblock javascripts %}