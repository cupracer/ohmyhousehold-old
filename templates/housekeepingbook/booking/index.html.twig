{% extends 'theme/base-datatables.html.twig' %}

{% block page_header_buttons %}
    {% if is_granted('createBooking', household) %}
        <a href="{{ path('housekeepingbook_booking_new') }}" class="btn btn-outline-primary btn-sm btn-icon-split ml-3">
            <span class="icon text-primary mr-1">
              <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">{{ 'Add booking...'|trans }}</span>
        </a>
    {% endif %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">{{ 'Dynamic bookings'|trans }}</h3>
                </div>
                <div class="card-body">
                    <table id="bookings" class="table table-hover table-striped dataTable" role="grid">
                        <thead>
                        <tr>
                            <th>{{ 'Date'|trans }}</th>
                            <th>{{ 'User'|trans }}</th>
                            <th>{{ 'Category'|trans }}</th>
                            <th>{{ 'Account holder'|trans }}</th>
                            <th>{{ 'Description'|trans }}</th>
                            <th>{{ 'Amount'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        {% if bookings %}
                            <tbody>
                            {% for booking in bookings %}
                                <tr class="{% if booking.private %}font-italic{% endif %}">
                                    <td class="min text-center" data-sort="{{ booking.bookingDate|date('U') }}">{{ booking.bookingDate|format_date }}</td>
                                    <td class="min">{{ booking.householdUser.user }}</td>
                                    <td class="min text-center">{{ booking.bookingCategory }}</td>
                                    <td class="min">{{ booking.accountHolder }}</td>
                                    <td>{{ booking.description }}</td>
                                    <td class="min text-right">
                                        <span class="{% if booking.amount > 0 %}text-success{% elseif booking.amount < 0 %}text-danger{% endif %}">
                                            {{ booking.amount|format_currency('EUR') }}
                                        </span>
                                    </td>
                                    <td class="text-right min">
                                        <div class="btn-group">
                                            {% if is_granted('edit', booking) %}
                                                <a href="{{ path('housekeepingbook_booking_edit', {'id': booking.id}) }}" class="btn btn-xs btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            {% endif %}
                                        </div>
                                        <div class="btn-group">
                                            {% if is_granted('delete', booking) %}
                                                <form method="post" action="{{ path('housekeepingbook_booking_delete', {'id': booking.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
                                                    <button class="btn btn-xs btn-outline-danger btn-delete"><i class="fas fa-trash-alt"></i></button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">{{ 'no records found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        {% endif %}
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('housekeepingbook_booking_index') }}
{% endblock javascripts %}