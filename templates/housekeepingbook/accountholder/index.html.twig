{% extends 'theme/base-datatables.html.twig' %}

{% block page_header_buttons %}
    {% if is_granted('createAccountHolder', household) %}
        <a href="{{ path('housekeepingbook_accountholder_new') }}" class="btn btn-outline-primary btn-sm btn-icon-split ml-3">
            <span class="icon text-primary mr-1">
              <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">{{ 'Add account holder...'|trans }}</span>
        </a>
    {% endif %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">{{ 'Account holders'|trans }}</h3>
                </div>
                <div class="card-body">
                    <table id="accountHolders" class="table table-hover table-striped dataTable" role="grid">
                        <thead>
                        <tr>
                            <th>{{ 'Name'|trans }}</th>
                            <th>{{ 'CreatedAt'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        {% if accountHolders %}
                            <tbody>
                            {% for accountHolder in accountHolders %}
                                <tr>
                                    <td>{{ accountHolder.name }}</td>
                                    <td class="min">{{ accountHolder.createdAt }}</td>
                                    <td class="text-right min">
                                        <div class="btn-group">
                                            {% if is_granted('edit', accountHolder) %}
                                                <a href="{{ path('housekeepingbook_accountholder_edit', {'id': accountHolder.id}) }}" class="btn btn-xs btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            {% endif %}
                                        </div>
                                        <div class="btn-group">
                                            {% if is_granted('delete', accountHolder) %}
                                                <form method="post" action="{{ path('housekeepingbook_accountholder_delete', {'id': accountHolder.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accountHolder.id) }}">
                                                    <button class="btn btn-xs btn-outline-danger btn-delete"><i class="fas fa-trash-alt"></i></button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">{{ 'no records found'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        {% endif %}
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('housekeepingbook_accountholder_index') }}
{% endblock javascripts %}