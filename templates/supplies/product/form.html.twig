{% extends 'theme/base.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col"></div>
        <div class="col-lg-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">{{ 'Details'|trans }}</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="form-group">
                                {{ form_label(form.supply) }}
                                {{ form_widget(form.supply) }}
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                {{ form_label(form.organicCertification) }}
                                {{ form_widget(form.organicCertification) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.brand) }}
                                {{ form_widget(form.brand) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.ean) }}
                                {{ form_widget(form.ean) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.quantity) }}
                                {{ form_widget(form.quantity) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.measure) }}
                                {{ form_widget(form.measure) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.packaging) }}
                                {{ form_widget(form.packaging) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                {{ form_label(form.minimumNumber) }}
                                {{ form_widget(form.minimumNumber) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg text-right">
                            <a href="{{ path('supplies_product_index') }}" class="btn btn-outline-warning btn-icon-split">
                                        <span class="icon text-warning mr-1">
                                            <i class="far fa-times-circle"></i>
                                        </span>
                                <span class="text">{{ 'Cancel'|trans }}</span>
                            </a>
                            <button type="submit" class="btn btn-primary btn-icon-split ml-3">
                                        <span class="icon text-white-50 mr-1">
                                            <i class="far fa-save"></i>
                                        </span>
                                <span class="text">{{ button_label|default('button.add')|trans|u.title }}</span>
                            </button>
                        </div>
                        <!-- /.col -->
                    </div>
                    {{ form_end(form) }}
                </div>
                <!-- /.card-body -->
                {% if product is defined and is_granted('delete', product) %}
                    <div class="card-footer">
                        <form method="post" action="{{ path('supplies_product_delete', {'id': product.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_product_' ~ product.id) }}">
                            <button class="btn btn-xs text-danger btn-delete">
                                            <span class="icon mr-1">
                                                <i class="far fa-trash-alt"></i>
                                            </span>
                                <span class="text">{{ 'delete'|trans|u.title }}</span>
                            </button>
                        </form>
                    </div>
                    <!-- /.card-footer -->
                {% endif %}
            </div>
            <!-- /.card -->
        </div>
        <div class="col"></div>
    </div>
    <!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('supplies_product_form') }}
{% endblock javascripts %}