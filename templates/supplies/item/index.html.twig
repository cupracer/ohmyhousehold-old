{% extends 'theme/base-datatables.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('supplies_item_index') }}
{% endblock stylesheets %}

{% block page_header_buttons %}
    {% if is_granted('createSuppliesItem', household) %}
        <a href="{{ path('supplies_item_new') }}" class="btn btn-outline-primary btn-sm btn-icon-split ml-3">
            <span class="icon text-primary mr-1">
              <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text">{{ 'Add item...'|trans }}</span>
        </a>
    {% endif %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">{{ 'Items'|trans }}</h3>
                </div>
                <div class="card-body">
                    <table id="items" class="table table-hover table-striped dataTable" role="grid"
                        data-json-url="{{ path('supplies_item_datatables') }}">
                        <thead>
                        <tr>
                            <th data-priority="0">{{ 'Product'|trans }}</th>
                            <th data-priority="2">{{ 'Brand'|trans }}</th>
                            <th>{{ 'Category'|trans }}</th>
                            <th data-priority="3">{{ 'Amount'|trans }}</th>
                            <th>{{ 'Purchase date'|trans }}</th>
                            <th data-priority="4">{{ 'Best-before date'|trans }}</th>
                            <th data-priority="1"></th>
                            <th></th>
                        </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('supplies_item_index') }}
{% endblock javascripts %}